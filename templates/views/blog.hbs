
{{>head}}
<body>
<!-- container section start -->
<section id="container" class="">
{{>header}}
{{>sidebar}}

  <section id="main-content">
    <section class="wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="fa fa fa-bars"></i> Home</h3>
          <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/">Home</a></li>
          </ol>
        </div>
      </div>
        <form action="/blog/search" method="get" id="blog_search_form" class="generic_container">
            <label for="topic_search">Search Topics: </label>
            <input type="text" name="topic_search" id="topic_search"  autocomplete="off">
            <input type="submit" class="fancy_button" value="Search!">
            {{#if admin_access}}<a href="/blog/compose" >New Post</a>{{/if}}
        </form>

        {{#each posts}}
            <h2><a href="/blog/article?article_id={{this._id}}">{{this.post_title}}</a></h2>
            <h3 class="timestamp">{{this.createdAt}}</h3>
        {{/each}}
        
      </section>
    </section>    
  </section>


  {{>footer}}
  {{>foot}}
    