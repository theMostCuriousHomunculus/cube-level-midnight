<!DOCTYPE html>
<html>
    <head>
        <title>Cube Level Midnight</title>
        <link href="/css/styles.css" type="text/css" rel="stylesheet" />
    </head>
    <body>

        <div id="header">
            {{>header}}
        </div>

        <table>
            <tr class="header_row">
                <th>User Name</th>
                <th>Send Bud Request</th>
            </tr>
            {{#each matching_users}}
            <tr>
                <td>
                    <div class="avatar_container small">
                        <img src={{this.avatar}} class="avatar">
                    </div>
                    <p class="user_table">
                        {{this.account_name}}
                    </p>
                </td>
                <td>
                    {{#if this.isBud}}
                        <p class="user_table">Already Buds!  Nice!</p>
                    {{/if}}
                    {{#if this.isAspiringBud}}
                        <p class="user_table">Friend Request Already Received!</p>
                    {{/if}}
                    {{#if this.isPendingBud}}
                        <p class="user_table">Friend Request Already Sent!</p>
                    {{/if}}
                    {{#unless this.isBud}}
                        {{#unless this.isAspiringBud}}
                            {{#unless this.isPendingBud}}
                                <form action="/users/send-bud-request" method="post">
                                    <input type="hidden" name="potential_bud_id" value={{this._id}}>
                                    <input type="submit" class="fancy_button"  value="Send Bud Request">
                                </form>
                            {{/unless}}
                        {{/unless}}
                    {{/unless}}
                </td>
            </tr>
            {{/each}}
        </table>

        <div id="footer">
            {{>footer}}
        </div>

        <script src="/js/my-cubes.js"></script>
    </body>
</html>