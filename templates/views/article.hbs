{{>head}}
<body>
<!-- container section start -->
<section id="container" class="">
{{>header}}
{{>sidebar}}

  <section id="main-content">
    <section class="wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="fa fa fa-bars"></i> Home</h3>
          <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/">Home</a></li>
          </ol>
        </div>
      </div>

        <div class="generic_container">
            <h4>Originally Posted on <span class="timestamp">{{createdAt}}</span></h4>
            <h4>Last Edited on <span class="timestamp">{{updatedAt}}</span></h4>

            {{#if admin_access}}
                <form action="/blog/edit-post" method="post" >
                    <input type="hidden" name="post_id" value={{post_id}}>
                    <label for="post_title" >Post Title:</label>
                    <input type="text" id="post_title" name="post_title" value="{{title}}" autocomplete="off">
                    <label for="post_body" >Post Body:</label>
                    <textarea id="post_body" name="body" autocomplete="off" >{{body}}</textarea>
                    <input type="submit" class="fancy_button"  value="Edit Article">
                </form>
            {{else}}
                <div>
                    {{{body}}}
                </div>
            {{/if}}
        </div>

        <div class="generic_container">
            <form action="/blog/comment" method="post" class="subcontainer" >
                <input type="hidden" name="post_id" value={{post_id}}>
                <label for="comment_body" >Let me have it:</label>
                <textarea name="comment_body" id="comment_body" autocomplete="off" rows="3" ></textarea>
                <input type="submit" class="fancy_button"  value="Preach!!">
            </form>

            <div class="subcontainer">
                {{#each comments}}
                    <div class="avatar_container">
                        <img src={{this.avatar}} class="avatar">
                    </div>
                    <h3>{{this.account_name}}</h3>
                    <h4 class="timestamp" >{{this.createdAt}}</h4>
                    <p >{{this.body}}</p>
                    <br>
                {{/each}}
            </div>
        </div>        
      </section>
    </section>    
    </section>


    {{>footer}}
    {{>foot}}