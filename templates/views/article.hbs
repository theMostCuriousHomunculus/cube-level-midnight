<!DOCTYPE html>
<html>
    <head>
        <title>Cube Level Midnight</title>
        <link href="/css/styles.css" type="text/css" rel="stylesheet" />
    </head>
    <body>

        <div id="header">
            {{>header}}
        </div>

        <h2 class="timestamp">{{createdAt}}</h2>

        <div>
            {{{body}}}
        </div>

        {{#each comments}}
            <h3>{{this.account_name}}</h3>
            <h4 class="timestamp">{{this.createdAt}}</h4>
            <p>{{this.body}}</p>
        {{/each}}

        <form action="/blog/comment" method="post">
            <input type="hidden" name="post_id" value={{post_id}}>
            <label for="comment_body">Let me have it: </label>
            <textarea name="comment_body" id="comment_body" autocomplete="off" rows="5" cols="60"></textarea>
            <input type="submit" value="Preach!!">
        </form>

        <div id="footer">
            {{>footer}}
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="https://momentjs.com/downloads/moment-timezone-with-data-10-year-range.js"></script>
        <script src="/js/blog.js"></script>
    </body>
</html>