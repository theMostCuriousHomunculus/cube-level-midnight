{{>head}}
<body>
<!-- container section start -->
<section id="container" class="">
{{>header}}
{{>sidebar}}

  <section id="main-content">
    <section class="wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="fa fa fa-bars"></i> Home</h3>
          <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/">Home</a></li>
          </ol>
        </div>
      </div>
        <div class="generic_container" >
            <div class="avatar_container large">
                <img src={{avatar}} class="avatar">
            </div>

            <form action="/users/change-account-name" method="post" id="change_account_name"  autocomplete="off">
                <div>Email:</div><div>{{email}}</div>
                <br>
                <label for="account_name">Account Name:</label>
                <input type="text" name="account_name" id="account_name" value="{{account_name}}" onchange="submitChangeAccountName()">
            </form>

            <form action="/users/logout" method="post" id="logout_button">
                <input type="submit" class="fancy_button" value="Logout">
            </form>
        </div>

        <form action="/users/change-avatar" method="post" id="change_avatar" class="generic_container" autocomplete="off" onsubmit="submitChangeAvatar()">
            <label for="card_to_search">Change Card Image Avatar:</label>
            <input type="text" name="card_to_search" id="card_to_search" list="card_results" onkeyup="scryfallCardSearch()" onchange="scryfallPrintSearch()" required>
            <datalist id="card_results">
            <!-- the search results from scryfall will populate here -->
            </datalist>
            <label for="selected_printing">Printing:</label>
            <select name="selected_printing" id="selected_printing" class="short" required>
            <!-- the available printings will populate here -->
            </select>
            <input type="hidden" name="image" id="image">
            <input type="submit" class="fancy_button" value="Change My Avatar!">
        </form>

        {{!-- <form action="/users/logout-all" method="post">
            <input type="submit" class="fancy_button" value="Logout of All Sessions">
        </form> --}}

      </section>
    </section>    
  </section>
  
  
  {{>footer}}
{{>foot}}
    