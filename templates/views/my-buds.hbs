
        {{>head}}
        <body>
        <!-- container section start -->
        <section id="container" class="">
        {{>header}}
        {{>sidebar}}

          <section id="main-content">
            <section class="wrapper">
              <div class="row">
                <div class="col-lg-12">
                  <h3 class="page-header"><i class="fa fa fa-bars"></i> Home</h3>
                  <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/">Home</a></li>
                  </ol>
                </div>
              </div>
              
        <h2>Howdy, {{account_name}}!</h2>

        <form action="/users/search-users" method="get" class="generic_container">
            <h3>Find a New Bud!</h3>
            <label for="account_name">Account Name: </label>
            <input type="text" name="account_name" id="account_name" autocomplete="off" required>
            <input type="submit" class="fancy_button" value="Search!">
        </form>

        <div id="relationship_container" class="generic_container two_column">
            <div>
                <table >
                    <tr class="header_row">
                        <th>Your Buds</th>
                        <th>View Their Cubes</th>
                    </tr>
                    {{#each buds}}
                    <tr>
                        <td>
                            <div class="avatar_container small">
                                <img src={{this.avatar}} class="avatar">
                            </div>
                            <p class="user_table">
                                {{this.account_name}}
                            </p>
                        </td>
                        <td>
                            {{#each this.cubes}}
                                <a href="/cubes/view-cube?cube_id={{this._id}}&cube_component=main_board">{{this.cube_name}}</a>
                            {{/each}}
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>

            <div>
                <table >
                    <tr class="header_row">
                        <th>Aspiring Buds</th>
                        <th>Respond</th>
                    </tr>
                    {{#each aspiring_buds}}
                    <tr>
                        <td>
                            <div class="avatar_container small">
                                <img src={{this.avatar}} class="avatar">
                            </div>
                            <p class="user_table">
                                {{this.account_name}}
                            </p>
                        </td>
                        <td>
                            <form action="/users/respond-bud-request" method="post">
                                <input type="hidden" name="aspiring_bud_id" value={{this._id}}>
                                <button type="submit" class="fancy_button" name="response" value="accept">Accept!</button>
                                <button type="submit" class="fancy_button" name="response" value="reject">Reject!</button>
                                <button type="submit" class="fancy_button" name="response" value="block">Block!</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>

            <div>
                <table>
                    <tr class="header_row">
                        <th>Pending Buds</th>
                    </tr>
                    {{#each pending_buds}}
                    <tr>
                        <td>
                            <div class="avatar_container small">
                                <img src={{this.avatar}} class="avatar">
                            </div>
                            <p class="user_table">
                                {{this.account_name}}
                            </p>
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>

            <div>
                <table>
                    <tr class="header_row">
                        <th>Dicks</th>
                        <th>Un-dick</th>
                    </tr>
                    {{#each dicks}}
                    <tr>
                        <td>
                            <div class="avatar_container small">
                                <img src={{this.avatar}} class="avatar">
                            </div>
                            <p class="user_table">
                                {{this.account_name}}
                            </p>
                        </td>
                        <td>
                            <form action="/users/undick" method="post">
                                <input type="hidden" name="dick_id" value={{this._id}}>
                                <input type="submit" class="fancy_button" value="Un-Dick!" />
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
      </section>
    </section>    
  </section>
  
  
  {{>footer}}
{{>foot}}


    